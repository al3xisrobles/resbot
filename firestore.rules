rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Venues collection - read by all, write only by authenticated users (for caching)
    match /venues/{venueId} {
      allow read: if true;  // Anyone can read cached venue data
      allow write: if isSignedIn();  // Only authenticated users can cache data
    }

    // Cache collection - read by all, write only by authenticated users
    match /cache/{cacheId} {
      allow read: if true;  // Anyone can read trending/topRated cache
      allow write: if isSignedIn();  // Only authenticated users can update cache
    }

    // Users collection
    match /users/{userId} {
      // User document - only the user can read/write their own data
      allow read, write: if isOwner(userId);

      // Bookmarks subcollection - only the user can read/write their own bookmarks
      match /bookmarks/{venueId} {
        allow read, write: if isOwner(userId);
      }
    }

    // Reservation jobs collection
    match /reservationJobs/{jobId} {
      // Creating a job: the doc must have userUid equal to the caller's uid
      allow create: if isOwner(request.resource.data.userId);

      // Reading/updating/deleting: only the owner of the job can touch it
      allow read, update, delete: if isOwner(resource.data.userId);
    }

    // Resy credentials collection - user can only access their own credentials
    match /resyCredentials/{userId} {
      allow read, write: if isOwner(userId);
    }

    match /searchJobs/{jobId} {
      // allow any signed-in user to read job progress
      allow read: if isSignedIn();

      // writes stay server-only (Cloud Functions using Admin SDK bypass rules)
      allow write: if false;
    }
  }
}
