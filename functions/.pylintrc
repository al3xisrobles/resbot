[MASTER]
# Add the api directory to the Python path so pylint can resolve imports
init-hook='import sys; sys.path.append("api")'

[MESSAGES CONTROL]
# Disable specific warnings that are stylistic preferences
disable=
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W1203,  # logging-fstring-interpolation (we use f-strings intentionally)
    R0913,  # too-many-arguments
    R0917,  # too-many-locals

[BASIC]
# Good variable names which should always be accepted
good-names=i,j,k,e,f,s,t,d,ok,id,n,_

[FORMAT]
# Maximum number of characters on a single line
max-line-length=120
